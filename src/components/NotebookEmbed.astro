---
import { getSafeUrl } from "../shared/safeurl";

type Props = {
  src: string;
  title: string;
  linkLabel?: string;
};

const { src, title, linkLabel = "Open the full notebook page" } = Astro.props;
const safeSrc = getSafeUrl(src);
---

<a href={safeSrc}>{linkLabel}</a>

<div class="notebook-frame">
  <iframe
    src={safeSrc}
    title={title}
    loading="lazy"
    sandbox="allow-scripts allow-popups"
    referrerpolicy="no-referrer"
  ></iframe>
</div>
