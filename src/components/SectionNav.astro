---
import type { SitePage } from "../lib/site";

type Props = {
  title: string;
  currentPath: string;
  pages: SitePage[];
};

const { title, currentPath, pages } = Astro.props;
---

<aside class="section-nav" aria-label="Section pages">
  <h2>{title}</h2>
  <ul>
    {
      pages.map((page) => (
        <li>
          <a
            href={page.path}
            class={page.path === currentPath ? "active" : ""}
            aria-current={page.path === currentPath ? "page" : undefined}
          >
            {page.title}
          </a>
        </li>
      ))
    }
  </ul>
</aside>
